---
// Disable prerendering to access request headers
export const prerender = false;

import Layout from '../layouts/Layout.astro';
import { getAvailableWorkflows } from '../api/workflows';
import { getTranslator } from '@gudupao/astro-i18n';

// Get language from params or cookie
const lang = Astro.params.lang || Astro.cookies.get('lang')?.value || 'en';
const t = getTranslator(lang);

// Get available workflows list
let availableWorkflows: string[] = [];
let loading = true;
let error: string | null = null;

console.log('Fetching available workflows...');

try {
  availableWorkflows = await getAvailableWorkflows();
  console.log('Available workflows:', availableWorkflows);
} catch (err: unknown) {
  console.error('Error fetching workflows:', err);
  error = (err as Error).message || 'Failed to fetch workflows';
} finally {
  console.log('Completed fetching workflows');
  loading = false;
}

---
<Layout>
  <div class="workflows-page">
    <div class="page-header">
      <h1 class="page-title">{t('homepage.title')}</h1>
      <p class="page-description">{t('homepage.description')}</p>
    </div>

    <div class="workflows-container">
      {loading ? (
        <div class="loading-container">
          <div class="loading-spinner"></div>
          <p>{t('homepage.loading')}</p>
        </div>
      ) : error ? (
        <div class="error-container">
          <div class="error-icon">‚ö†Ô∏è</div>
          <h3>{t('homepage.error')}</h3>
          <p class="error-message">{error}</p>
          <button onclick="window.location.reload()" class="retry-button">{t('homepage.retry')}</button>
        </div>
      ) : availableWorkflows.length === 0 ? (
        <div class="empty-container">
          <div class="empty-icon">üìã</div>
          <h3>{t('homepage.empty')}</h3>
          <p>{t('homepage.emptyDescription')}</p>
        </div>
      ) : (
        <div class="workflow-grid">
          {availableWorkflows.map((workflow) => (
            <a href={`/wfs/${workflow}`} class="workflow-card">
              <div class="workflow-icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  <polyline points="14,2 14,8 20,8" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  <line x1="16" y1="13" x2="8" y2="13" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  <line x1="16" y1="17" x2="8" y2="17" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  <polyline points="10,9 9,9 8,9" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </div>
              <div class="workflow-content">
                <h3 class="workflow-name">{workflow.replace(/_/g, ' ').replace(/\b\w/g, l => l.toUpperCase())}</h3>
                <p class="workflow-id">{workflow}</p>
              </div>
              <div class="workflow-arrow">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M9 18l6-6-6-6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </div>
            </a>
          ))}
        </div>
      )}
    </div>
  </div>
</Layout>
<style>
  .workflows-page {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }

  .page-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .page-title {
    font-size: 3rem;
    font-weight: 700;
    color: var(--text-primary);
    margin: 0 0 1rem 0;
    background: linear-gradient(135deg, var(--accent-color), var(--accent-hover));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .page-description {
    font-size: 1.2rem;
    color: var(--text-secondary);
    margin: 0;
  }

  .workflows-container {
    min-height: 400px;
  }

  .loading-container,
  .error-container,
  .empty-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 300px;
    gap: 1rem;
    text-align: center;
  }

  .loading-spinner {
    width: 40px;
    height: 40px;
    border: 3px solid var(--border-color);
    border-top: 3px solid var(--accent-color);
    border-radius: 50%;
    animation: spin 1s linear infinite;
  }

  @keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }

  .loading-container p,
  .empty-container p {
    color: var(--text-secondary);
    font-size: 1.1rem;
  }

  .error-container,
  .empty-container {
    background: var(--bg-secondary);
    border-radius: 16px;
    border: 1px solid var(--border-color);
    padding: 2rem;
  }

  .error-icon,
  .empty-icon {
    font-size: 3rem;
  }

  .error-container h3,
  .empty-container h3 {
    font-size: 1.5rem;
    color: var(--text-primary);
    margin: 0;
  }

  .error-message {
    color: #d32f2f;
    font-weight: 500;
    margin: 0;
  }

  .retry-button {
    background: var(--accent-color);
    color: white;
    border: none;
    border-radius: 8px;
    padding: 0.75rem 1.5rem;
    font-weight: 500;
    cursor: pointer;
    transition: background-color 0.2s ease;
    margin-top: 1rem;
  }

  .retry-button:hover {
    background: var(--accent-hover);
  }

  .workflow-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 1.5rem;
    padding: 1rem 0;
  }

  .workflow-card {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.5rem;
    background: var(--bg-secondary);
    border: 1px solid var(--border-color);
    border-radius: 16px;
    text-decoration: none;
    color: var(--text-primary);
    transition: all 0.3s ease;
    box-shadow: 0 4px 12px var(--shadow-light);
    backdrop-filter: blur(10px);
  }

  .workflow-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px var(--shadow-medium);
    border-color: var(--accent-color);
  }

  .workflow-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    background: var(--accent-color);
    color: white;
    border-radius: 12px;
    flex-shrink: 0;
  }

  .workflow-content {
    flex: 1;
    min-width: 0;
  }

  .workflow-name {
    font-size: 1.25rem;
    font-weight: 600;
    margin: 0 0 0.25rem 0;
    color: var(--text-primary);
    line-height: 1.3;
  }

  .workflow-id {
    font-size: 0.9rem;
    color: var(--text-secondary);
    margin: 0;
    font-family: 'Courier New', monospace;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .workflow-arrow {
    color: var(--text-muted);
    transition: all 0.2s ease;
    flex-shrink: 0;
  }

  .workflow-card:hover .workflow-arrow {
    color: var(--accent-color);
    transform: translateX(4px);
  }

  /* Tablet and mobile responsive adjustments */
  @media (max-width: 1024px) {
    .workflows-page {
      padding: 1.5rem;
    }

    .page-title {
      font-size: 2.5rem;
    }

    .workflow-grid {
      grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
      gap: 1rem;
    }
  }

  @media (max-width: 768px) {
    .workflows-page {
      padding: 1rem;
    }

    .page-header {
      margin-bottom: 2rem;
    }

    .page-title {
      font-size: 2rem;
    }

    .page-description {
      font-size: 1rem;
    }

    .workflow-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .workflow-card {
      padding: 1.25rem;
    }

    .workflow-icon {
      width: 40px;
      height: 40px;
    }

    .workflow-name {
      font-size: 1.1rem;
    }
  }

  @media (max-width: 480px) {
    .workflows-page {
      padding: 0.75rem;
    }

    .page-title {
      font-size: 1.75rem;
    }

    .workflow-card {
      padding: 1rem;
      gap: 0.75rem;
    }

    .workflow-icon {
      width: 36px;
      height: 36px;
    }
  }
</style>

