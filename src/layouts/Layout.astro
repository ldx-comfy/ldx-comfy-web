---
import Sidebar from '../components/Sidebar.astro';
import { getTranslator } from '@gudupao/astro-i18n';
import { ensureMeSSR } from '../lib/auth/guard';

// Get language for HTML lang attribute
const lang = Astro.params.lang || Astro.cookies.get('lang')?.value || 'en';
const t = getTranslator(lang);

// Get user info for sidebar
const cookieHeader = Astro.request.headers.get('cookie');
const guard = await ensureMeSSR(Astro.request.url, cookieHeader);
const me = guard.me;

// Props for customizing the page
interface Props {
  title?: string;
}

const { title } = Astro.props;
const pageTitle = title || t('sidebar.appName');
---
<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
		<script is:inline>
			// Initialize theme immediately to prevent flash
			(function() {
				const savedTheme = localStorage.getItem('theme');
				let theme = 'light';
				
				if (savedTheme) {
					theme = savedTheme;
				} else if (window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches) {
					theme = 'dark';
				}
				
				if (theme === 'dark') {
					document.documentElement.classList.add('dark-theme');
				} else {
					document.documentElement.classList.add('light-theme');
				}
			})();
		</script>
	</head>
	<body>
		<div class="layout">
			<Sidebar me={me} />
			<main>
				<slot />
			</main>
		</div>
	</body>
</html>

<style>
/* CSS Variables are now defined in ThemeSwitcher.astro */

	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		background: var(--bg-primary);
		color: var(--text-primary);
		transition: background-color 0.3s ease, color 0.3s ease;
	}

	.layout {
		display: flex;
		height: 100%;
	}

	main {
		flex-grow: 1;
		padding: 40px;
		margin-left: 320px;
		overflow-y: auto; /* Add scroll for content overflow */
		background: var(--bg-primary);
		transition: background-color 0.3s ease;
	}

	/* Tablet and mobile responsive adjustments */
	@media (max-width: 1024px) {
		main {
			padding: 20px;
		}
	}

	@media (max-width: 768px) {
		main {
			padding: 15px;
			margin-left: 280px;
		}
	}
</style>
