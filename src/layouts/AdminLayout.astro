---
import AdminSidebar from '../components/AdminSidebar.astro';
import { ensureMeSSR } from '../lib/auth/guard';
import PermissionGuard from '../components/PermissionGuard.astro';

// Get user info for sidebar
const cookieHeader = Astro.request.headers.get('cookie');
const guard = await ensureMeSSR(Astro.request.url, cookieHeader);
const me = guard.me;

// Props for customizing the page
interface Props {
  title?: string;
}

const { title } = Astro.props;
const pageTitle = title || '管理面板'; // Already simplified to "管理面板", no change needed.
const lang = 'zh-CN';
---
<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
		<script is:inline>
			// Initialize theme immediately to prevent flash
			(function() {
				const savedTheme = localStorage.getItem('theme');
				let theme = 'light';

				if (savedTheme) {
					theme = savedTheme;
				} else if (window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches) {
					theme = 'dark';
				}

				if (theme === 'dark') {
					document.documentElement.classList.add('dark-theme');
				} else {
					document.documentElement.classList.add('light-theme');
				}
			})();
		</script>
	</head>
	<body>
		<div class="admin-layout">
			<AdminSidebar me={me} />
			<main class="admin-main">
			    <PermissionGuard me={me} permissionsAll={['admin:access']} elseText="您沒有訪問管理面板的權限。" cookieHeader={cookieHeader}>
			   <slot />
			    </PermissionGuard>
			</main>
		</div>
	</body>
</html>

<style>
/* CSS Variables are now defined in ThemeSwitcher.astro */

	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		background: var(--bg-primary);
		color: var(--text-primary);
		transition: background-color 0.3s ease, color 0.3s ease;
	}

	.admin-layout {
		display: flex;
		height: 100%;
	}

	.admin-main {
		flex-grow: 1;
		padding: 40px;
		margin-left: 320px; /* Account for wider admin sidebar */
		overflow-y: auto;
		background: var(--bg-primary);
		transition: background-color 0.3s ease;
	}

	/* Admin panel specific styles */
	.admin-main {
		background: linear-gradient(135deg, var(--bg-primary) 0%, rgba(var(--accent-rgb), 0.02) 100%);
	}

	/* Enhanced content area for admin */
	.admin-main > * {
		max-width: 1200px;
		margin: 0 auto;
	}

	/* Tablet and mobile responsive adjustments */
	@media (max-width: 1024px) {
		.admin-main {
			padding: 30px 20px;
			margin-left: 300px;
		}
	}

	@media (max-width: 768px) {
		.admin-main {
			padding: 20px 15px;
			margin-left: 280px;
		}

		.admin-main > * {
			max-width: none;
		}
	}

	/* Admin panel specific responsive design */
	@media (max-width: 480px) {
		.admin-main {
			margin-left: 0;
			padding: 15px;
		}

		.admin-layout {
			flex-direction: column;
		}
	}
</style>