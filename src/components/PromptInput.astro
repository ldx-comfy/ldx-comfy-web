---
interface Props {
  placeholder?: string;
  initialValue?: string;
  rows?: number;
  maxLength?: number;
}

const { placeholder = "請輸入提示詞...", initialValue = "", rows = 4, maxLength = 500 } = Astro.props;
---

<div class="prompt-card">
  
  <div class="header">
    <h2 class="title">提示詞輸入框</h2>
  </div>

  

  <textarea 
    id="prompt-input"
    name="prompt"
    placeholder={placeholder}
    rows={rows}
    maxlength={maxLength}
    class="prompt-textarea"
    oninput={`
      const input = this;
      const charCountElement = document.getElementById('char-count');
      const charCount = input.value.length;
      
      charCountElement.textContent = charCount + '/${maxLength}';
      
      const ninetyPercent = ${maxLength} * 0.9;
      const ninetyFivePercent = ${maxLength} * 0.95;

      charCountElement.classList.remove('yellow', 'red');

      if (charCount > ninetyFivePercent) {
        charCountElement.classList.add('red');
      } else if (charCount > ninetyPercent) {
        charCountElement.classList.add('yellow');
      }
    `}
  >{initialValue}</textarea>

  
</div>

